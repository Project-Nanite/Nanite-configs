<?xml version="1.0" encoding="UTF-8"?>

<channel name="xfce4-panel" version="1.0">
  <property name="configver" type="int" value="2"/>

  <!-- PANELS DEFINITION -->
  <property name="panels" type="array">
    <value type="int" value="1"/>

    <!-- Panel 1: Top Panel -->
    <property name="panel-1" type="empty">
      <property name="position" type="string" value="p=6;x=0;y=0"/>
      <property name="length" type="uint" value="100"/>
      <property name="position-locked" type="bool" value="true"/>
      <property name="icon-size" type="uint" value="24"/>
      <property name="size" type="uint" value="40"/>

      <!-- Plugin order (Left → Center → Right) -->
      <property name="plugin-ids" type="array">
        <value type="int" value="1"/>   <!-- Whisker Menu -->
        <value type="int" value="2"/>   <!-- Separator -->
        <value type="int" value="3"/>   <!-- Thunar -->
        <value type="int" value="4"/>   <!-- Firefox -->
        <value type="int" value="5"/>   <!-- Terminal -->
        <value type="int" value="6"/>   <!-- Separator -->
        <value type="int" value="7"/>   <!-- Task List -->
        <value type="int" value="8"/>   <!-- Separator -->
        <value type="int" value="9"/>   <!-- System Load -->
        <value type="int" value="10"/>  <!-- Netload -->
        <value type="int" value="11"/>  <!-- DateTime -->
        <value type="int" value="12"/>  <!-- Separator -->
        <value type="int" value="13"/>  <!-- Workspace Switcher -->
        <value type="int" value="14"/>  <!-- Separator -->
        <value type="int" value="15"/>  <!-- Show Desktop -->
        <value type="int" value="16"/>  <!-- Separator -->
        <value type="int" value="17"/>  <!-- System Tray -->
        <value type="int" value="18"/>  <!-- PulseAudio -->
        <value type="int" value="19"/>  <!-- Separator -->
        <value type="int" value="20"/>  <!-- Session/Actions -->
      </property>

      <!-- Panel style -->
      <property name="background-style" type="uint" value="1"/>
      <property name="background-rgba" type="array">
        <value type="double" value="0.200000"/>
        <value type="double" value="0.200000"/>
        <value type="double" value="0.200000"/>
        <value type="double" value="0.95"/>
      </property>
      <property name="border-width" type="uint" value="1"/>
      <property name="enter-opacity" type="uint" value="100"/>
      <property name="leave-opacity" type="uint" value="95"/>
      <property name="background-image" type="string" value=""/>
      <property name="enable-struts" type="bool" value="true"/>
      <property name="autohide-behavior" type="uint" value="0"/>
    </property>
  </property>

  <!-- PANEL PLUGINS -->
  <property name="plugins" type="empty">

    <!-- LEFT SIDE -->
    <property name="plugin-1" type="string" value="whiskermenu"/>
    <property name="plugin-2" type="string" value="separator">
      <property name="spacing" type="uint" value="6"/>
    </property>
    <property name="plugin-3" type="string" value="launcher">
      <property name="items" type="array">
        <value type="string" value="thunar.desktop"/>
      </property>
    </property>
    <property name="plugin-4" type="string" value="launcher">
      <property name="items" type="array">
        <value type="string" value="firefox-esr.desktop"/>
      </property>
    </property>
    <property name="plugin-5" type="string" value="launcher">
      <property name="items" type="array">
        <value type="string" value="xfce4-terminal.desktop"/>
      </property>
    </property>
    <property name="plugin-6" type="string" value="separator">
      <property name="spacing" type="uint" value="6"/>
    </property>

    <!-- CENTER -->
    <property name="plugin-7" type="string" value="tasklist">
      <property name="grouping" type="bool" value="true"/>
      <property name="include-all-workspaces" type="bool" value="true"/>
      <property name="flat-buttons" type="bool" value="false"/>
      <property name="show-labels" type="bool" value="true"/>
      <property name="sort-order" type="uint" value="4"/>
      <property name="window-scrolling" type="bool" value="true"/>
      <property name="grouping-min" type="uint" value="2"/>
      <property name="button-spacing" type="uint" value="2"/>
      <property name="button-padding" type="uint" value="4"/>
    </property>

    <!-- RIGHT SIDE -->
    <property name="plugin-8" type="string" value="separator">
      <property name="spacing" type="uint" value="6"/>
    </property>
    <property name="plugin-9" type="string" value="systemload"/>
    <property name="plugin-10" type="string" value="netload"/>
    <property name="plugin-11" type="string" value="datetime">
      <property name="layout" type="uint" value="3"/>
      <property name="font" type="string" value="Sans 10"/>
    </property>
    <property name="plugin-12" type="string" value="separator">
      <property name="spacing" type="uint" value="6"/>
    </property>
    <property name="plugin-13" type="string" value="pager"/>
    <property name="plugin-14" type="string" value="separator">
      <property name="spacing" type="uint" value="6"/>
    </property>
    <property name="plugin-15" type="string" value="showdesktop"/>
    <property name="plugin-16" type="string" value="separator">
      <property name="spacing" type="uint" value="6"/>
    </property>
    <property name="plugin-17" type="string" value="systray">
      <property name="square-icons" type="bool" value="true"/>
      <property name="icon-size" type="uint" value="24"/>
    </property>
    <property name="plugin-18" type="string" value="pulseaudio">
      <property name="icon-size" type="uint" value="24"/>
    </property>
    <property name="plugin-19" type="string" value="separator">
      <property name="spacing" type="uint" value="6"/>
    </property>
    <property name="plugin-20" type="string" value="actions">
      <property name="items" type="array">
        <value type="string" value="suspend"/>
        <value type="string" value="hibernate"/>
        <value type="string" value="logout"/>
        <value type="string" value="restart"/>
        <value type="string" value="shutdown"/>
        <value type="string" value="lockscreen"/>
      </property>
    </property>
  </property>

  <!-- WHISKER MENU CONFIG -->
  <property name="plugin-1" type="empty">
    <property name="button-title" type="string" value="Nanite"/>
    <property name="button-icon" type="string" value="/usr/share/icons/Nanite-Icons/apps/48/distributor-logo.png"/>
    <property name="show-button-icon" type="bool" value="true"/>
    <property name="launcher-show-name" type="bool" value="true"/>
    <property name="menu-width" type="int" value="450"/>
    <property name="menu-height" type="int" value="500"/>
    <property name="menu-opacity" type="uint" value="95"/>
    <property name="command-lockscreen" type="string" value="xflock4"/>
    <property name="command-settings" type="string" value="xfce4-settings-manager"/>
    <property name="command-logout" type="string" value="xfce4-session-logout --logout --fast"/>
    <property name="command-restart" type="string" value="xfce4-session-logout --reboot --fast"/>
    <property name="command-shutdown" type="string" value="xfce4-session-logout --halt --fast"/>
    <property name="command-suspend" type="string" value="xfce4-session-logout --suspend"/>
    <property name="command-hibernate" type="string" value="xfce4-session-logout --hibernate"/>
  </property>
</channel>
