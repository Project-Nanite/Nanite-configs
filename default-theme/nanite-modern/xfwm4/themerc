snap.edge.resistance: 0.5

# Window cycling
cycle.minimum: 1
cycle.minimum.tab: 1
cycle.minimum.tab.always: false

# Compositing
compositing: true
compositing.manager: xfwm4
compositing.unredirect.fullscreen: true
