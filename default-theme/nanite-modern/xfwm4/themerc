# Workspace management
workspace.count: 4
workspace.name.0: Main
workspace.name.1: Code
workspace.name.2: Web
workspace.name.3: Media

# Mouse bindings
mouse.scroll.workspace: true
mouse.scroll.workspace.threshold: 100
mouse.scroll.workspace.direction: horizontal

# Keyboard shortcuts
keybind.workspace.1: <Super>1
keybind.workspace.2: <Super>2
keybind.workspace.3: <Super>3
keybind.workspace.4: <Super>4

# Window rules
window.rules: class=Gimp:state=maximized
