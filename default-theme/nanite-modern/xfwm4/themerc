focus.autoRaiseDelay: 500

# Window placement
placement.mode: center
placement.reserve: true
placement.reserve.x: 0
placement.reserve.y: 0
placement.reserve.width: 0
placement.reserve.height: 0

# Window snapping
snap.edge.enabled: true
snap.edge.threshold: 10
