border.color.inactive: #bdc3c7

# Window shadows
shadow.enable: true
shadow.offset.x: 0
shadow.offset.y: 2
shadow.color: rgba(52, 73, 94, 0.15)
shadow.radius: 8

# Button layout (O|HMC - close, minimize, maximize)
button.layout: O|HMC
button.offset: 4
button.spacing: 2

# Button styling
button.color: #f8f9fa
button.color.active: #3498db
button.color.prelight: #5dade2
button.color.pressed: #2980b9

# Button icons
button.icon.placement: N
button.icon.offset.x: 0
button.icon.offset.y: 0

# Close button
button.close.image: close
