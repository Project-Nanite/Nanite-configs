# Window animations
animation.enabled: true
animation.duration: 200
animation.easing: ease-out-cubic

# Window opacity
opacity.active: 100
opacity.inactive: 95
opacity.rule: 0:class_g=Gimp:100
opacity.rule: 0:class_g=Firefox:100
opacity.rule: 0:class_g=Thunderbird:100

# Window decorations
decoration.placement: top
